<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.highlifestudio.fitnessapp.MainActivity"
    android:background="@color/colorPrimary">

    <Space
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily Steps:"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:text="3152"
        android:id="@+id/textViewDailySteps"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Daily Distance:"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:text="3,2km"
        android:id="@+id/textViewDistance"
        android:maxLength="6"
        android:maxLines="1"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        />

    <Button
        android:id="@+id/startTraining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="#ffffff"
        android:background="#540004"
        android:padding="5dp"
        android:text="Start"/>



</LinearLayout>